<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/css")" rel="stylesheet" type="text/css" />
    <link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/themes/base/css")" rel="stylesheet" type="text/css" />
    <script src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/js")"></script>
    <script src="../../Scripts/timeago.js" type="text/javascript"></script>
</head>
    <body>
        <div id="header">
            <div id="logo">
                <img src="../../images/barker.png" alt="Barker" />
            </div>
            <div id="top_links_container">
                @{ if (User.Identity.IsAuthenticated)
                   {
                       <span>logged in as @User.Identity.Name </span>  
                       @: |@Html.ActionLink("Home", "Index", "Home")                                                                         
                       @: |@Html.ActionLink("Logout", "Logoff", "Signup")                                           
                   }
                   else
                   {
                       @Html.ActionLink("Login", "Login", "Signup")
                   }
                }
            </div>            
            <br class="clear"/>
        </div>
        <div id="container">
            <div id="main">
                @RenderBody()
            </div>
            <div id="side">
                @RenderSection("SideSection",false)
            </div>
            <br class="clear"/>
        </div>
    </body>
</html>
